<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
    <Button x:Name="SendMessageButton" Content="Send Message" HorizontalAlignment="Left" Margin="405,275,0,0" VerticalAlignment="Top" Width="90" Click="SendMessageButton_Click" RenderTransformOrigin="0.667,2"/>
    <Button x:Name="ConnectToServerButton" Content="Connect to server" HorizontalAlignment="Left" Margin="295,14,0,0" VerticalAlignment="Top" Width="110" Click="ConnectToServerButton_Click"/>
    <TextBox x:Name="TextFeed" HorizontalAlignment="Left" Height="163" Margin="10,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="490" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    <TextBox x:Name="TextEditor" HorizontalAlignment="Left" Height="45" Margin="17,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="490"/>
    <Label x:Name="NickNameText" Content="NickName:" HorizontalAlignment="Left" Margin="17,11,0,0" VerticalAlignment="Top" Width="85"/>
    <Button x:Name="QuiteButton" Content="Quite" HorizontalAlignment="Left" Margin="425,14,0,0" VerticalAlignment="Top" Width="75" Click="QuiteButton_Click"/>
    <Label x:Name="NickNamelabel" Content="Not authorized" HorizontalAlignment="Left" Margin="82,11,0,0" VerticalAlignment="Top" Width="103"/>
  </Grid>
</Window>
